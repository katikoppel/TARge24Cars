@model IEnumerable<Cars.Models.Cars.CarsIndexViewModel>

@{
	var Nr = 1;
}

<div class="h1">
	Cars
</div>
<form method="post">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Nr</th>
				<th scope="col">Brand</th>
				<th scope="col">Model</th>
				<th scope="col">ReleaseYear</th>
				<th scope="col">Price</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var car in Model)
			{
				<tr>
					<td>@Nr</td>
					<td>@car.Brand</td>
					<td>@car.Model</td>
					<td>@car.ReleaseYear</td>
					<td>@car.Price</td>
					<td>
						<a asp-action="details" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-outline-success">Details</a>
						<a asp-action="update" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-outline-primary">Update</a>
						<a asp-action="delete" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-outline-danger">Delete</a>
					</td>
				</tr>

				Nr++;
			}
		</tbody>
	</table>
</form>

<div>
	<a asp-action="create" asp-controller="Cars" type="submit" class="btn btn-primary">Add new car</a>
</div>